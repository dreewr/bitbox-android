<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.VerificationActivity">

    <!--Toolbar Produtos Disponíves-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:baselineAligned="false"
                  android:background="@drawable/bg_transparent_round"
                  android:gravity="center"
                  android:paddingStart="8dp" android:paddinEnd="8dp"
                  android:layout_marginTop="48dp"
                  android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
                  android:orientation="horizontal">

        <ImageButton
                android:id="@+id/button_back_directscheduling"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView

                android:layout_width="wrap_content" android:layout_height="40dp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:text="Verificação" android:gravity="center" android:textSize="16sp"
                android:textColor="@color/white_text" android:layout_weight="4"/>

    </LinearLayout>

    <TextView
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Digite sua senha de 4 dígitos para confirmar a compra do seu produto!"
            android:textSize="16sp"
            android:textColor="@color/white_text"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@drawable/bg_transparent_round" android:layout_marginTop="16dp"
                  android:layout_marginRight="32dp" android:layout_marginLeft="32dp"
                  android:orientation="vertical">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:padding="8dp">
            <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <EditText
                        android:textSize="24sp"
                        android:id="@+id/et_pin_1"
                        android:layout_width="match_parent" android:layout_height="64dp"
                        android:background="@drawable/bg_round_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:alpha="0.9"
                        android:singleLine="true"
                        android:textColor="@color/icons"
                        tools:text="4"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <EditText
                        android:textSize="24sp"
                        android:id="@+id/et_pin_2"
                        android:layout_width="match_parent" android:layout_height="64dp"
                        android:background="@drawable/bg_round_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:alpha="0.9"
                        android:singleLine="true"
                        android:textColor="@color/icons"
                        tools:text="4"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <EditText
                        android:textSize="24sp"
                        android:id="@+id/et_pin_3"
                        android:layout_width="match_parent" android:layout_height="64dp"
                        android:background="@drawable/bg_round_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:alpha="0.9"
                        android:singleLine="true"
                        android:textColor="@color/icons"
                        tools:text="4"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <EditText
                        android:textSize="24sp"
                        android:id="@+id/et_pin_4"
                        android:layout_width="match_parent" android:layout_height="64dp"
                        android:background="@drawable/bg_round_white"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:alpha="0.9"
                        android:singleLine="true"
                        android:textColor="@color/icons"
                        tools:text="4"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <Button android:layout_marginBottom="64dp"
            android:layout_width="match_parent" android:layout_height="@dimen/btn_height"
            android:layout_marginEnd="@dimen/btn_margin"
            android:layout_marginStart="@dimen/btn_margin"
            android:id="@+id/btn_scan"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/btn_padding" android:paddingStart="40dp" android:paddingEnd="16dp"
            android:text="Finalizar Compra"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_check_black_24dp"/>

</LinearLayout>