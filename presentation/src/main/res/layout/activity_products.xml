<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            tools:context=".view.ProductsActivity">

        <!--Toolbar Produtos Disponíves-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:baselineAligned="false"
                      android:background="@drawable/bg_transparent_round"
                      android:gravity="center"
                      android:paddingStart="8dp" android:paddinEndt="8dp"
                      android:layout_marginTop="48dp"
                      android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
                      android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/button_back_directscheduling"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView

                    android:layout_width="wrap_content" android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="Produtos disponíveis" android:gravity="center" android:textSize="16sp"
                    android:textColor="@color/white_text" android:layout_weight="4"/>

        </LinearLayout>

        <!--Root com lista de produtos-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/bg_transparent_round" android:layout_marginTop="32dp"
                      android:layout_marginRight="32dp" android:layout_marginLeft="32dp"
                      android:orientation="vertical">


            <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:padding="8dp"
            >
                <LinearLayout
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        tools:background="@color/transparent"
                        android:layout_height="match_parent" android:layout_weight="1">

                    <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_round_white"
                            android:layout_height="wrap_content">


                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="3">

                            <LinearLayout
                                    android:gravity="center|bottom"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"

                                    android:layout_height="0dp" android:layout_weight="2">

                                <TextView
                                        android:paddingBottom="8dp"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:textStyle="bold"
                                        android:text="Chocolatinho Colorido " android:gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center|end"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" android:layout_weight="1">

                                <TextView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:text="200" android:gravity="center_vertical|end|right"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>
                                <ImageView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_bitcoin_yellow"
                                        android:visibility="visible"
                                        android:layout_marginRight="8dp"
                                />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="5">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:layout_margin="8dp"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:src="@drawable/mem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_gradient"
                        android:layout_height="match_parent" android:layout_weight="1">

                    <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_round_white"
                            android:layout_height="wrap_content">


                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="3">

                            <LinearLayout
                                    android:gravity="center|bottom"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"

                                    android:layout_height="0dp" android:layout_weight="2">

                                <TextView
                                        android:paddingBottom="8dp"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:textStyle="bold"
                                        android:text="Chocolatinho Colorido " android:gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center|end"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" android:layout_weight="1">

                                <TextView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:text="200" android:gravity="center_vertical|end|right"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>
                                <ImageView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_bitcoin_yellow"
                                        android:visibility="visible"
                                        android:layout_marginRight="8dp"
                                />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="5">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:layout_margin="8dp"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:src="@drawable/mem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent" android:layout_weight="1">

                    <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_round_white"
                            android:layout_height="wrap_content">


                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="3">

                            <LinearLayout
                                    android:gravity="center|bottom"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"

                                    android:layout_height="0dp" android:layout_weight="2">

                                <TextView
                                        android:paddingBottom="8dp"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:textStyle="bold"
                                        android:text="Chocolatinho Colorido " android:gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center|end"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" android:layout_weight="1">

                                <TextView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:text="200" android:gravity="center_vertical|end|right"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>
                                <ImageView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_bitcoin_yellow"
                                        android:visibility="visible"
                                        android:layout_marginRight="8dp"
                                />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="5">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:layout_margin="8dp"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:src="@drawable/mem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent" android:layout_weight="1">

                    <LinearLayout
                            android:layout_margin="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_round_white"
                            android:layout_height="wrap_content">


                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="3">

                            <LinearLayout
                                    android:gravity="center|bottom"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"

                                    android:layout_height="0dp" android:layout_weight="2">

                                <TextView
                                        android:paddingBottom="8dp"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:textStyle="bold"
                                        android:text="Chocolatinho Colorido " android:gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:gravity="center|end"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp" android:layout_weight="1">

                                <TextView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:text="200" android:gravity="center_vertical|end|right"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"/>
                                <ImageView
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_bitcoin_yellow"
                                        android:visibility="visible"
                                        android:layout_marginRight="8dp"
                                />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout

                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="5">
                            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:layout_margin="8dp"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:src="@drawable/mem"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

        <!--Root de informaçãoes de saldo e compra-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:baselineAligned="false"
                      android:background="@drawable/bg_transparent_round"
                      android:layout_marginTop="32dp"
                      android:layout_marginLeft="32dp" android:layout_marginRight="32dp" android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="0dp" android:layout_height="40dp"
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"
                        android:fontFeatureSettings=""
                        android:text="Saldo disponível:" android:gravity="center_vertical|start" android:textSize="16sp"
                        android:textColor="@color/white_text" android:layout_weight="4"/>
                <TextView
                        android:layout_width="0dp" android:layout_height="40dp"
                        android:visibility="visible"
                        android:text="1000" android:gravity="center_vertical|end|right" android:textSize="16sp"
                        android:textColor="@color/accent" android:layout_weight="2"/>
                <ImageView
                        android:layout_width="0dp" android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_bitcoin_yellow_2"
                        android:visibility="visible"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="0dp" android:layout_height="40dp"
                            android:visibility="visible"
                            android:text="1000" android:gravity="center_vertical|end|right" android:textSize="16sp"
                            android:textColor="@color/accent" android:layout_weight="4"/>
                    <ImageView
                            android:layout_width="0dp" android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_bitcoin_yellow_2"
                            android:visibility="visible"
                            android:layout_weight="2"/>

                    <ImageView
                            android:layout_width="0dp" android:layout_height="40dp"

                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_forward_yellow"
                            android:visibility="visible"
                            android:layout_weight="2"/>

                    <TextView
                            android:layout_width="0dp" android:layout_height="40dp"
                            android:visibility="visible"
                            android:text="800" android:gravity="center_vertical|end|right" android:textSize="16sp"
                            android:textColor="@color/accent" android:layout_weight="4"/>
                    <ImageView
                            android:layout_width="0dp" android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_bitcoin_yellow_2"
                            android:visibility="visible"
                            android:layout_weight="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView

                            android:layout_width="0dp" android:layout_height="40dp"
                            android:visibility="visible"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="Mensagem de erro" android:gravity="center" android:textSize="16sp"
                            android:textColor="@color/accent" android:layout_weight="4"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--Botão de confirmação-->
        <Button android:layout_marginBottom="64dp"
                android:layout_width="match_parent" android:layout_height="@dimen/btn_height"
                android:layout_marginEnd="@dimen/btn_margin"
                android:layout_marginStart="@dimen/btn_margin"
                android:id="@+id/btn_scan"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_gradient"
                android:padding="@dimen/btn_padding" android:paddingStart="40dp" android:paddingEnd="16dp"
                android:text="Confirmar compra"
                android:textStyle="bold"
                android:textColor="@color/icons"
                android:drawablePadding="8dp"
                android:drawableEnd="@drawable/ic_bitcoin"/>


    </LinearLayout>

</ScrollView>